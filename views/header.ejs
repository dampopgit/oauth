}

.user-password{
  overflow:hidden;
  background: orange;
  position:relative;
  width: 150px;
  height: 18px;
  opacity: 0.4;
  border-radius: 2px;
  padding: 5px 15px;
  border: 0;
}

.user-password::before{
  transition: all .8s;
  content:'';
  position:absolute;
  top:0px;
  left:100%;
  background: linear-gradient(to bottom, rgba(229, 172, 142, 0), rgba(255,255,255,0.5) 50%, rgba(229, 172, 142, 0));
  width: 8px;
  height: 20px;
  opacity: 0;
  border-radius: 2px;
  padding: 5px 15px;
  border: 0;
  transform: skew(0deg);
}
.user-password:hover::before{
  transition: all .8s;
  content:'';
  position:absolute;
  top:0px;
  left:-100px;
  background: linear-gradient(to bottom, rgba(229, 172, 142, 0), rgba(255,255,255,0.5) 50%, rgba(229, 172, 142, 0));
  width: 88px;
  height: 30px;
  opacity: 1;
  border-radius: 2px;
  padding: 5px 15px;
