/* CSS which you need for blurred box */


.blurred-box{
  margin-left:2%
;
  position: relative;
  width: 250px;
  height: 350px;
  transition:.8s;
  background: inherit;
  border-radius: 2px;
  overflow: hidden;
  animation-duration: 2s;
        animation-iteration-count: 1;
}

.blurred-box:after{
 content: '';
 width: 2500px;
 height: 300px;
 background: inherit;
 position: absolute;
 left: -25px;
 right: 0;
 top: -25px;
 bottom: 0;
 box-shadow: inset 0 0 0 20px rgba(255,255,255,0.15);
 filter: blur(20px);
}


